# Database Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_DATABASE=sys_platform

# Backend Configuration
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/sys_platform
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# CORS Configuration (Backend)
# For production (Split Architecture), set to your CloudFront/Frontend domain (e.g., https://app.example.com)
# For local development, leave as *
APP_CORS_ALLOWED_ORIGINS=*

# Frontend Configuration (Build Args)
# For production (Split Architecture), set to your API Gateway and WebSocket ALB domains
# For local development, leave as /api and /ws (Nginx Proxy)
VITE_API_URL=/api
VITE_WS_URL=/ws


# used for letsencrypt only local setup 
ACME_EMAIL=your-real-email@gmail.com