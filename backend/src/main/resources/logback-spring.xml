<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 
    SRE-GRADE LOGGING CONFIGURATION
    
    WHY this approach:
    - Single log path: Console → Docker stdout → Filebeat → Elasticsearch
    - Structured JSON with trace correlation (trace_id, span_id)
    - Industry standard: Filebeat is battle-tested for log collection
    - Simpler than OpenTelemetry Logback appender (which has compatibility issues)
    -->
    
    <!-- Console appender with structured JSON logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>trace_id</includeMdcKeyName>
            <includeMdcKeyName>span_id</includeMdcKeyName>
            <includeMdcKeyName>trace_flags</includeMdcKeyName>
            <customFields>{"service":"system-behavior-platform"}</customFields>
        </encoder>
    </appender>
    
    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
    
    <!-- Application-specific loggers -->
    <logger name="com.sysbehavior.platform" level="INFO"/>
    <logger name="com.sysbehavior.platform.connectivity" level="DEBUG"/>
    
    <!-- Reduce noise from Spring and libraries -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="io.lettuce" level="WARN"/>
    <logger name="org.apache.kafka" level="WARN"/>
</configuration>
