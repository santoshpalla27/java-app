<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- OpenTelemetry Appender for log export -->
    <appender name="OTEL" class="io.opentelemetry.instrumentation.logback.appender.v1_0.OpenTelemetryAppender">
        <captureExperimentalAttributes>true</captureExperimentalAttributes>
        <captureKeyValuePairAttributes>true</captureKeyValuePairAttributes>
    </appender>
    
    <!-- Console appender with structured JSON logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>trace_id</includeMdcKeyName>
            <includeMdcKeyName>span_id</includeMdcKeyName>
            <includeMdcKeyName>trace_flags</includeMdcKeyName>
            <customFields>{"service":"system-behavior-platform"}</customFields>
        </encoder>
    </appender>
    
    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="OTEL"/>
        <appender-ref ref="CONSOLE"/>
    </root>
    
    <!-- Application-specific loggers -->
    <logger name="com.sysbehavior.platform" level="INFO"/>
    <logger name="com.sysbehavior.platform.connectivity" level="DEBUG"/>
    
    <!-- Reduce noise from Spring and libraries -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="io.lettuce" level="WARN"/>
    <logger name="org.apache.kafka" level="WARN"/>
</configuration>
